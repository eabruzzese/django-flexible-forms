#!/usr/bin/env sh

set -eu
[ "${DEBUG:-}" ] && set -x

PROJECT_ROOT="$(git rev-parse --show-toplevel)"
BIN_DIR="$PROJECT_ROOT/bin"
TESTS_DIR="$PROJECT_ROOT/tests"

main () {
    (
        cd "$TESTS_DIR" || exit 1

        # Delete the HTML coverage report directory.
        rm -rf htmlcov/

        # Run the pytest suite.
        poetry run pytest "$@"
    )
}

main "$@"
